@model GGWP.Models.LoginModel

@{
    ViewBag.Title = "Registracija";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GGWP</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/semantic/semantic.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/semantic.js"></script>
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>

<div class="sadrzaj" style="padding-top: 7%; width: 40%; margin: 0 auto; text-align: center;">
        
    <div id="logoCircle" class="logoCircle"></div>
    
    @if (ViewBag.messages != null)
    {
        foreach (string s in ViewBag.messages)
        {
            <h3>@s</h3>
        }
    }

    @using (Html.BeginForm("Registracija", "Home", FormMethod.Post))
    {
        <div class="al" style="padding-top: 5%;"></div>
        <div class="header">Registracija</div>

        <div class="ui inverted form" style="padding-top: 8%;">
            <div class="field">
                <label><i class="mail icon"></i> Ime i prezime</label>
                <input placeholder="Ime i prezime" name="ime" type="text">
            </div>

            <br />
            <div class="field">
                <label><i class="mail icon"></i> Dob</label>
                <input placeholder="Dob" name="dob" type="number">
            </div>

            <div class="ui divider"></div>
            <br />

            <div class="two fields">
                <div class="field">
                    <label><i class="mail icon"></i> Korisničko ime</label>
                    <input placeholder="Korisničko ime" name="username" type="text">
                </div>
                <div class="field">
                    <label><i class="mail icon"></i> e-Mail</label>
                    <input placeholder="e-Mail" name="email" type="text">
                </div>
            </div>
            <br />
            <div class="two fields">
                <div class="field">
                    <label><i class="mail icon"></i> Lozinka</label>
                    <input placeholder="Lozinka" name="password" type="password">
                </div>
                <div class="field">
                    <label><i class="mail icon"></i> Ponovi lozinku</label>
                    <input placeholder="Ponovi lozinku" name="rpass" type="password">
                </div>
            </div>
            <br />
            <div class="field">
                <button class="loginButton" id="registerBtn" type="submit">Registriraj se</button>
            </div>
        </div>

    }
</div>

<script src="~/Scripts/registration.js"></script>
</body>
</html>