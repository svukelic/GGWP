@using GGWP.Models.Entities
@model GGWP.Models.Entities.ProfilModel

@{
    ViewBag.Title = "Profil";
}

<h4 class="ui horizontal inverted divider header">
    <i class="user md icon"></i>
    Profil
</h4>
<p></p>

<div class="ui form">
    <div class="three fields">
        <div class="field centerImage" id="centerColumn">
            <div class="column">
                <div class="infor">
                    <label class="ui big label labela">@Model.user.ime</label>
                </div>
                <div class="infor">
                    <label class="ui big label labela">@Model.user.username</label>
                </div>
                <div class="infor">
                    <label class="ui big label labela">@Model.user.email</label>
                </div>
                <div class="infor">
                    <label class="ui big label labela">@Model.user.dob</label>
                </div>
                <div class="infor">
                    <label class="ui big label labela">Broj timova: @Model.timovi.Count</label>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<div id="raspored_timovi">
    @foreach (TimskiRaspored t in Model.timovi)
    {
        <div class="ui middle aligned three column centered grid container">
            <div class="row raspored_item">
                <div class="left aligned column">
                    <div class="ui black inverted segment">
                        <div class="raspored_naziv_tima">
                            <strong>@r.tim1.naziv</strong>
                        </div>
                        <div class="raspored_sadrzaj">
                            <div class="ui divider"></div>
                            <div class="ui inverted list">
                                @foreach (Clan c in r.tim1.clanovi)
                                {
                                    <div class="item">
                                        <img class="ui avatar image" src="~/Content/images/ggwp.png">
                                        <div class="content">
                                            <a class="header">@c.username</a>
                                            <div class="description">@c.uloga</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="center aligned column">
                    @r.datum
                    <h4 class="ui inverted horizontal divider">
                        <strong>VS</strong>
                    </h4>
                </div>
                <div class="left aligned column">
                    <div class="ui black inverted segment">
                        <div class="raspored_naziv_tima">
                            <strong>@r.tim2.naziv</strong>
                        </div>
                        <div class="raspored_sadrzaj">
                            <div class="ui divider"></div>
                            <div class="ui inverted list">
                                @foreach (Clan c in r.tim2.clanovi)
                                {
                                    <div class="item">
                                        <img class="ui avatar image" src="~/Content/images/ggwp.png">
                                        <div class="content">
                                            <a class="header">@c.username</a>
                                            <div class="description">@c.uloga</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>


