@using GGWP.Models.Entities
@model IEnumerable<GGWP.Models.Entities.RasporedModel>

@{
    ViewBag.Title = "Raspored";
}

<h4 class="ui horizontal inverted divider header">
    <i class="calendar icon"></i>
    Raspored
</h4>
<p></p>

<div class="row">
    <div class="ui search">
        <div class="ui icon input">
            <input class="prompt" placeholder="Pretraži..." type="text" id="searchInput">
            <i class="search icon"></i>
        </div>
    </div>
</div>

<div style="padding-top: 15px;" id="game_list">
    <button class="ui inverted purple button but">League of legends</button>
    <button class="ui inverted purple button but">CS:GO</button>
    <button class="ui inverted purple button but">Warcraft</button>
    <button class="ui inverted purple button but">Call of duty: Modern Warfare</button>
</div>


<div id="raspored_timovi">
    @foreach (RasporedModel r in Model)
    {
        <div class="ui middle aligned three column centered grid container">
            <div class="row raspored_item">
                <div class="left aligned column">
                    <div class="ui black inverted segment">
                        <div class="raspored_naziv_tima">
                            <strong>@r.tim1.naziv</strong>
                        </div>
                        <div class="raspored_sadrzaj">
                            <div class="ui divider"></div>
                            <div class="ui inverted list">
                                @foreach(Clan c in r.tim1.clanovi)
                                {
                                <div class="item">
                                    <img class="ui avatar image" src="~/Content/images/ggwp.png">
                                    <div class="content">
                                        <a class="header">@c.username</a>
                                        <div class="description">@c.uloga</div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="center aligned column">
                    @r.datum
                    <h4 class="ui inverted horizontal divider">
                        <strong>VS</strong>
                    </h4>
                </div>
                <div class="left aligned column">
                    <div class="ui black inverted segment">
                        <div class="raspored_naziv_tima">
                            <strong>@r.tim2.naziv</strong>
                        </div>
                        <div class="raspored_sadrzaj">
                            <div class="ui divider"></div>
                            <div class="ui inverted list">
                                @foreach(Clan c in r.tim2.clanovi)
                                {
                                <div class="item">
                                    <img class="ui avatar image" src="~/Content/images/ggwp.png">
                                    <div class="content">
                                        <a class="header">@c.username</a>
                                        <div class="description">@c.uloga</div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>

<br />

<script src="~/Scripts/raspored.js"></script>