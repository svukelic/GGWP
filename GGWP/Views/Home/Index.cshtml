@using GGWP.Models.db
@model IEnumerable<GGWP.Models.db.Vijesti>

@{
    ViewBag.Title = "Vijesti";
}

<h4 class="ui horizontal inverted divider header" style="padding-bottom: 2%;">
    <i class="newspaper icon"></i>
    Vijesti
</h4>
<p></p>

<div class="row" style="padding-bottom: 3%;">
    <div class="ui search">
        <div class="ui icon input">
            <input class="prompt" placeholder="Pretraži..." type="text" id="searchInput">
            <i class="search icon"></i>
        </div>
    </div>
</div>

<div class="row" style="width: 50%; margin: 0 auto; text-align: left;">

    <div class="ui items">

        @foreach (Vijesti v in Model)
    {
        <div class="item vijest_container" onclick="VijestKlik(@v.id)">
            <div class="image">
                <img src="@v.img" />
            </div>
            <div class="content">
                <div class="vijest_item">
                    <div class="header">@v.naslov</div>
                    <div class="meta">
                        <span>@v.datum</span>
                    </div>
                    <div class="description">
                        <p>@v.description</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="ui divider"></div>
}

    </div>

</div>

<div class="ui modal" style="text-align: center; border: 2px solid white;">
    <div class="ui icon header" style="background-color: black; color: white;">
        <i class="newspaper outline icon"></i>
        <div id="detalji_naslov">Naslov</div>
        <div style="padding-top: 15px;" class="ui divider"></div>
    </div>

    <div class="meta" style="background-color: black; color: grey;">
        <span id="detalji_datum">1.2.2018.</span>
    </div>

    <div class="content" style="background-color: black;">
        <div class="ui divider"></div>
        <br />
        <img src="http://ggwp-turnir.azurewebsites.net/Content/images/ggwp.png" id="detalji_img" style="height:100px;"/>
        <br />

